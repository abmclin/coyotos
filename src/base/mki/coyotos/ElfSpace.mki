module coyotos.ElfSpace {
  import rt = coyotos.RunTime;
  import util = coyotos.Util;
  import Constructor = coyotos.Constructor;

  import small = coyotos.model.Small;

  export enum PP {
    EPH = 0,
    Handler = 1
  };

  export capreg APP {
    ELFFILE = rt.REG.APP0,
    ADDRSPACE,
    OPAQUESPACE,
    SPACEGPT,
    BGGPT,
    HANDLER_ENTRY,

    TMP1,
    TMP2,
    TMP3
  };

  export enum TOOL {
    ELFFILE = rt.TOOL.APP0,
    BACKGROUND  /* pre-set-up image of ELF file */
  };

  def elf_image = small.load_image(PrimeBank, "coyotos/ElfSpace");

  export def load_image(bank, file) {
    def cons = Constructor.make(bank, elf_image, NullCap());
    def image = loadimage(bank, file);
    Constructor.set_tool(cons, TOOL.ELFFILE, 
                         weaken(readfile(bank, file)));
    Constructor.set_tool(cons, TOOL.BACKGROUND, 
                         weaken(image.space));

    image.space = cons;
    return image;
  }
}
